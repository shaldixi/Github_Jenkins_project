/configure system cron schedule "{{per["CronName"]}}" day-of-month {{per["day-of-month"]}}
/configure system cron schedule "{{per["CronName"]}}" hour {{per["hour"]}}
/configure system cron schedule "{{per["CronName"]}}" minute {{per["minute"]}}